- name: "Update Apt Cache"
  apt: 
     update_cache: yes
  tags: setup

- name: "Install ustreamer dependencies"
  apt:
    name: ['make', 'gcc', libevent-dev', 'libjpeg8-dev', 'libbsd-dev']

- name: 'Download ustreamer'
  git:
    repo:
    dest: /home/pi/
    clone: yes
    update: yes

- name: 'Build ustreamer'
  make:
    chdir: /home/pi/ustreamer
    t
